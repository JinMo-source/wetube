doctype html
html(lang="ko")
    head
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul
                    if loggedIn
                        li 
                            a(href="/video/upload") Upload
                        li 
                            a(href="/video/logout") Logout
                    else
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Login

                
        main
            block content
            
        include partials/footer